<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/item_music_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_music_album"/>

    <TextView
        android:id="@+id/item_music_track"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/item_music_image"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="Track name"/>

    <TextView
        android:id="@+id/item_music_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/item_music_image"
        android:layout_below="@+id/item_music_track"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/item_music_image"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        tools:text="Track time"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_music_image"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/grey_400"/>


</RelativeLayout>